@import 'archer'

normalize()

body
    padding: 0 px_to_rem(10px)

h1
    text-align: center
    color: #333

header 
    display: flex
    margin-bottom: px_to_rem(20px)

    input,
    #submit
        padding: px_to_rem(3px) px_to_rem(8px)
        border: 2px solid #CCC
        border-radius: 5px
        line-height: 2rem

    input
        flex: 1
        outline: none

    input:hover
        box-shadow: -1px 1px 5px #CCC inset

    #submit
        width: px_to_rem(80px)
        margin-left: px_to_rem(5px)

        border-color: #0060BF
        background: #0060BF

        color: #FFF
        text-align: center
        font-weight: bold
        text-decoration: none

.content
    nav
        border-bottom: 1px solid #CCC
        padding: 0 px_to_rem(10px)

        a
            display: inline-block
            margin-bottom: -1px
            padding: 0 px_to_rem(10px)
            height: px_to_rem(30px)
            line-height: px_to_rem(30px)

            color: #666
            text-decoration: none

            border: 1px solid transparent;
            border-bottom: 0
            border-radius: 5px 5px 0 0;

        a.cur
            border-color: #CCC
            background: #FFF;
            color: #000

    .table
        border: 1px solid #CCC
        border-radius: 5px

        table
            width: 100%

        td
            border-bottom: 1px solid #CCC
            border-right: 1px solid #CCC
            padding: px_to_rem(5px)
            color: #333

        th
            border-right: 1px solid #CCC
            padding: px_to_rem(5px)
            background: #e6f1f6

        tr:nth-child(2) td
            border-top: 1px solid #CCC

        th:last-child,
        td:last-child 
            border-right: 0

        tr:last-child td
            border-bottom: 0

        tr:hover td 
            background: #FCFCE2
